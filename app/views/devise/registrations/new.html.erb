  <div class="col-sm-8">
    <h2>Sign up</h2>
  

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-horizontal">
      <div class="form-group">
        <%= f.label :email, class: "col-sm-3 control-label" %>
        <div class="col-sm-5">
          <%= f.email_field :email, autofocus: true, class: "col-sm-5 form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :password , class: "col-sm-3 control-label" %>

        <div class="col-sm-5">
          <%= f.password_field :password, autocomplete: "off" , class: "col-sm-5 form-control"%>
          </div>
      </div>

     
      <div class="form-group">
        <div class="actions">
          <div class="col-sm-3"></div>
          <div class="col-sm-3">
            <%= f.submit "Sign up" , class: "btn btn-default" %>
          </div>
          <div class="col-sm-2"></div>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-3"></div>
        <div class="col-sm-4">Have an account? <%= render "devise/shared/links" %> </div>
    </div>
    <% end %>
  </div>
</div>