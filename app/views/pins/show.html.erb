<div class="col-sm-8">
	<div class="row">
		<div class="col-sm-3">
			<!-- <img src="<%=@pin.image.url%>" width="300px" height="300px"> -->
			<%= image_tag @pin.image.url, class: "medium-image" %>
		</div>
		<div class="col-sm-5"></div>
	</div>
	<div class="row">	
		<div class="col-sm-3">
			<p>
			  <strong>Description:</strong>
			  <%= @pin.description %>
			</p>
		</div><div class="col-sm-5"></div>
	</div>
	<div class="row">	
		<div class="col-sm-3">
			<% if @pin.user == current_user %>
			<%= link_to 'Edit', edit_pin_path(@pin) %> |
			<% end %>
			<%= link_to 'Back', pins_path %>
		</div>
	</div>
</div>